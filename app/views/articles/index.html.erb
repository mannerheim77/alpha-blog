<h1>Articles Listing Page</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
  <% @articles.each { |art| %>
    <tr>
      <td><%=art.title %></td>
      <td><%=art.description %></td>
      <td><%= link_to 'Show', article_path(art) %></td>
      <td><%= link_to 'Edit', edit_article_path(art) %></td>
      <td><!--%= button_to "Delete", article_path(art), method: :delete %></td-->
      <td><%= link_to "Delete", article_path(art), data: { "turbo-method": :delete } %></td>
    </tr>
    <% } %>
  </tbody>
</table>
