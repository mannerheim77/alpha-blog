<h1>Articles Listing Page</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Description</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
  <% @articles.each { |art| %>
    <tr>
      <td><%=art.title %></td>
      <td><%=art.author %></td>
      <td><%=art.description %></td>
      <td><%= link_to 'Show', article_path(art) %></td>
      <td><%= link_to 'Edit', edit_article_path(art) %></td>
      <td><!--%= button_to "Delete", article_path(art), method: :delete %></td-->
      <td><%= link_to "Delete", article_path(art), data: { "turbo-method": :delete, "turbo-confirm": "Are you sure?" } %></td>
    </tr>
    <% } %>
  </tbody>
</table>
<p>
  <%= button_to "New Article", new_article_path, method: :get  %>
</p>
