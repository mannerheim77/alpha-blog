<h1 class="text-center mt-4">Listing all articles</h1>

<div class="container">
  <% @articles.each do |art| %>
    <div class="row justify-content-md-center">
      <div class="col-8 mt-4">
        <div class="card text-center shadow mb-5 bg-white rounded">
          <div class="card-header fst-italic">
            by <%= art.author %>
          </div>
          <div class="card-body">
            <h5 class="card-title"><%= link_to art.title, article_path(art), class:"text-success text-decoration-none" %></h5>
            <div class="card-text text-start"><%= simple_format(truncate(art.description, length:100)) %></div>
            <%= link_to 'Show', article_path(art), class:"btn btn-outline-success" %>
            <%= link_to 'Edit', edit_article_path(art), class: "btn btn-outline-info" %>
            <%= link_to "Delete", article_path(art), class: "btn btn-outline-danger", data: {
              "turbo-method": :delete, "turbo-confirm": "Are you sure?" } %>
          </div>
          <div class="card-footer text-muted">
            <small> Created <%= time_ago_in_words(art.created_at) %> ago,
              edited <%= time_ago_in_words(art.updated_at) %> ago</small>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>